<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selected"
    tools:context=".fragments.DoctorPatientFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp"
        android:orientation="vertical"
        android:padding="25dp"
        >

            <TextView
                android:id="@+id/welcomePrior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:text="Here is every details of the Patient you have entered"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"

            />
        <LinearLayout
            android:id="@+id/detailsByDoctor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detPresByDoctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/patientIDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/fetchpatientIDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/datePatientD"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="16sp"
                android:layout_gravity="left"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:id="@+id/fetchdatePatientD"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prescribed Diagnoses"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:id="@+id/diagnosesPrescribedPatientD"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorRed"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Stomach Paim"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prescription"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>



</LinearLayout>

