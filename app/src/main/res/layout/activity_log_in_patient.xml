<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".LogInPatientActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginHorizontal="4dp"
        android:padding="20dp"
        android:orientation="vertical"
       >



        <EditText
            android:id="@+id/patientLoginId"
            android:layout_width="match_parent"
            android:height="48dp"
            android:textColor="@color/black"
            android:elevation="3dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="290dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:paddingHorizontal="25dp"
            android:textAlignment="center"
            android:maxLength="10"
            android:paddingVertical="15dp"
            android:inputType="text"
            android:hint="@string/login_id"
            android:textColorHint="@color/black"
            android:background="@drawable/border_edittext"
            android:ems="10"

            />


        <EditText
            android:id="@+id/patientLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="3dp"

            android:background="@drawable/border_edittext"

            android:elevation="3dp"
            android:ems="10"
            android:hint="@string/password"
            android:paddingHorizontal="25dp"

            android:inputType="textPassword"
            android:paddingVertical="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp"
             />

        <Button
            android:id="@+id/logInPatientBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Login"
            android:textSize="22sp"
            android:backgroundTint="@color/buttonin"
            android:textColor="@color/white"
            android:padding="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Didn't Have an Account?"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/signUpPatientOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/sign_up"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
